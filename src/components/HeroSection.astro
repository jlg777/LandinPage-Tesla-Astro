---
const { videoSrc, backgroundImage, title, subtitle} = Astro.props
const hasVideo = !!videoSrc
---

<section
  class="h-screen w-screen text-center relative overflow-hidden bg-cover bg-center flex flex-col justify-center items-center text-white"
>
  {
    hasVideo ? (
      <video
        autoplay
        muted
        loop
        playsinline
        class="absolute top-0 left-0 w-full h-full object-cover z-0"
      >
        <source src={videoSrc} type="video/mp4" />
        Tu navegador no soporta videos HTML5.
      </video>
    ) : (
      <div
        class="absolute top-0 left-0 w-full h-full bg-cover bg-center z-0"
        style={`background-image: url('${backgroundImage}');`}
      />
    )
  }
  <h2 class="absolute top-18 left-1/2 -translate-x-1/2 text-5xl font-semibold">{title}</h2>
  {
    subtitle && (
      <p class="absolute top-30 left-1/2 -translate-x-1/2 mt-2 text-base underline">{subtitle}</p>
    )
  }
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-10">
    <slot name="footer" />
  </div>

</section>
